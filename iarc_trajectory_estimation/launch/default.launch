<?xml version="1.0" encoding="UTF-8"?>

<launch>
	<arg name="mav_name" default="firefly"/>
  	<arg name="world_name" default="default"/>
	<arg name="gui" default="true"/>

	<include file="$(find iarc_simulation_tools)/launch/default.launch">
		<arg name="world_name" value="$(arg world_name)"/>
		<arg name="mav_name" value="$(arg mav_name)"/>
		<arg name="gui" value="$(arg gui)"/>
	</include>

	<group ns="$(arg mav_name)">
		<node pkg="iarc_trajectory_estimation" type="iarc_trajectory_estimation_node" 
				name="trajectory_generator" output="screen">
		<rosparam file="$(find iarc_trajectory_estimation)/config/params.yaml"/>
		</node>

		<node pkg="rviz" type="rviz" name="rviz" 
			args="-d $(find iarc_trajectory_estimation)/rviz_config/trajectoryconfig.rviz" /> 
	</group>
</launch>